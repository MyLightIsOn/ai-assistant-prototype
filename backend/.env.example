# Database Configuration
DATABASE_URL=sqlite:///../ai-assistant.db

# ntfy.sh Notification Server
NTFY_URL=http://localhost:8080/ai-notifications
NTFY_USERNAME=your-username-ai
NTFY_PASSWORD=your-secure-password

# AI Workspace Directory
AI_WORKSPACE=../ai-workspace

# FastAPI Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Backend API Secret (for internal authentication)
BACKEND_SECRET=generate-with-openssl-rand-base64-32

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=google_user_credentials.json
GOOGLE_PROJECT_ID=ai-assistant-123456
GOOGLE_AI_EMAIL=your-ai-email@gmail.com

# Gmail Sending
GMAIL_USER_EMAIL="your-ai-assistant@gmail.com"
GMAIL_RECIPIENT_EMAIL="your-personal-email@gmail.com"

# Google Calendar
GOOGLE_CALENDAR_ID=primary
USER_TIMEZONE=America/Los_Angeles

# Google Cloud Pub/Sub
GOOGLE_PUBSUB_TOPIC=calendar-notifications
GOOGLE_PUBSUB_SUBSCRIPTION=calendar-notifications-sub

# Webhook URL (for Pub/Sub)
WEBHOOK_BASE_URL=https://your-tailscale-hostname:8000

# Pub/Sub Security (Optional - recommended for production)
# Add this token as a query parameter when configuring the Pub/Sub push endpoint:
# https://your-hostname:8000/webhooks/calendar?token=your-secret-token
PUBSUB_VERIFICATION_TOKEN=generate-with-openssl-rand-base64-32
